    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test vectors",
            "runtimeExecutable": "ts-node",
            "cwd": "${workspaceFolder}",
            "args": ["tests/testvec.ts"],
            "sourceMaps": true,
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test quaternions",
            "runtimeExecutable": "ts-node",
            "cwd": "${workspaceFolder}",
            "args": ["tests/testquat.ts"],
            "sourceMaps": true,
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test polynomials",
            "runtimeExecutable": "ts-node",
            "cwd": "${workspaceFolder}",
            "args": ["tests/testpoly.ts"],
            "sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/dist/*.js",
				"${workspaceFolder}/tests/*.js",
				"${workspaceFolder}/../big/dist/*.js",
				"${workspaceFolder}/../big/dist/**/*.js",
			],
			"console": "integratedTerminal",
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "node-terminal",
            "name": "Debug Transform",
            "request": "launch",
            "command": "npm run build",
            "cwd": "${workspaceFolder}"
        }
    ]
}