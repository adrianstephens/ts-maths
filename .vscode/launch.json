	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Test all",
			"runtimeExecutable": "ts-node",
			"cwd": "${workspaceFolder}",
			"args": ["tests/run-tests.ts"],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/dist/*.js",
				"${workspaceFolder}/tests/*.js",
				"${workspaceFolder}/../big/dist/*.js",
				"${workspaceFolder}/../big/dist/**/*.js",
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"type": "node-terminal",
			"name": "Debug Transform",
			"request": "launch",
			"command": "npm run build",
			"cwd": "${workspaceFolder}"
		}
	]
}