{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"strict": true,
		"declaration": true,
		"stripInternal": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "src",
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}